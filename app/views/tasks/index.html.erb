<h1>My Tasks</h1>

<%= link_to 'Add New Task', new_task_path %>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <strong>Title:</strong> <%= task.title %> <br>
    <strong>Details:</strong> <%= task.details %> <br>
    <strong>Completed:</strong> <%= task.completed ? "Yes" : "No" %> <br>
    <%= link_to 'Show', task_path(task) %> |
    <%= link_to 'Edit', edit_task_path(task) %> |
    <%= link_to 'Delete', task_path(task), turbo_method: :delete, data: { turbo_confirm: "Are you sure you want to delete this task?" } %>
  </li>
<% end %>
</ul>
