<h1><%= @task.title %></h1>

<p>
  <strong>Details:</strong> <%= @task.details %><br>
  <strong>Completed:</strong> <%= @task.completed ? 'Yes' : 'No' %>
</p>

<%= link_to 'Back to task list', tasks_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
